{
  "extends": "@vue/tsconfig/tsconfig.dom.json", // what is this?
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@composables/*": ["./src/composables/*"],
      "@views/*": ["./src/views/*"],
      "vue-router": [
        "./node_modules/.pnpm/vue-router@4.5.0_vue@3.5.13_typescript@5.8.2_/node_modules/vue-router"
      ]
    },
    "types": ["@/composables/types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
